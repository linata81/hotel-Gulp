mixin appartment (title, desc, tags, img)
  .appartment
      .appartment__img(style = img)
      .appartment__desc
        .appartment__header
          .appartment__title #{title}
          .appartment__beds
            .fa.fa-bed
            .fa.fa-bed
        .appartment__text
          p #{desc}
        .appartment__footer
          a.appartment__button.button(href='appartment-page.html') Details
          .appartment__options
            each tag in tags
              .tag #{tag}
